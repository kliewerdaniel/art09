{
  "name": "artworks",
  "type": "base",
  "system": false,
  "schema": [
    {
      "name": "artist",
      "type": "relation",
      "required": true,
      "options": {
        "collectionId": "artists",
        "cascadeDelete": true,
        "minSelect": null,
        "maxSelect": 1
      }
    },
    {
      "name": "title",
      "type": "text",
      "required": true
    },
    {
      "name": "description",
      "type": "text"
    },
    {
      "name": "medium",
      "type": "select",
      "required": true,
      "options": {
        "values": ["painting", "drawing", "sculpture", "digital_art", "photography", "mixed_media", "ceramics", "textiles", "printmaking", "other"]
      }
    },
    {
      "name": "dimensions",
      "type": "text"
    },
    {
      "name": "year_created",
      "type": "number"
    },
    {
      "name": "price",
      "type": "number"
    },
    {
      "name": "is_for_sale",
      "type": "bool",
      "required": true,
      "options": {
        "default": false
      }
    },
    {
      "name": "image",
      "type": "file",
      "required": true
    },
    {
      "name": "additional_images",
      "type": "file"
    },
    {
      "name": "tags",
      "type": "text"
    },
    {
      "name": "views",
      "type": "number",
      "required": true,
      "options": {
        "default": 0
      }
    },
    {
      "name": "likes",
      "type": "number",
      "required": true,
      "options": {
        "default": 0
      }
    },
    {
      "name": "is_featured",
      "type": "bool",
      "required": true,
      "options": {
        "default": false
      }
    },
    {
      "name": "status",
      "type": "select",
      "required": true,
      "options": {
        "values": ["draft", "published", "sold", "archived"],
        "default": "draft"
      }
    },
    {
      "name": "created_at",
      "type": "date",
      "required": true,
      "options": {
        "default": "now"
      }
    },
    {
      "name": "updated_at",
      "type": "date",
      "required": true,
      "options": {
        "default": "now"
      }
    }
  ],
  "indexes": [
    {
      "name": "idx_artist",
      "fields": ["artist"]
    },
    {
      "name": "idx_medium",
      "fields": ["medium"]
    },
    {
      "name": "idx_for_sale",
      "fields": ["is_for_sale"]
    },
    {
      "name": "idx_featured",
      "fields": ["is_featured"]
    },
    {
      "name": "idx_status",
      "fields": ["status"]
    }
  ],
  "rules": {
    "list": {
      "filter": "status = 'published'"
    },
    "view": true,
    "create": true,
    "update": true,
    "delete": true
  }
}
